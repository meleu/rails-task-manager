<h1>My Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <input type="checkbox" <%= task.completed && 'checked' %>>
      <%= link_to task.title, task %>
      <small>[<%=
        link_to 'delete', task_path(task), data: {
          turbo_method: 'delete',
          turbo_confirm: 'Are you sure?'
        }
      %>]</small>
    </li>
  <% end %>
</ul>
<hr>
<%= link_to 'Add new task', new_task_path %>
